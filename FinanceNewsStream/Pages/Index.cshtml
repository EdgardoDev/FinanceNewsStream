@page
@model IndexModel
@{
    ViewData["Title"] = "News Stream";

    var nextNewsStream = @Model.news.Pagination.Count + @Model.news.Pagination.Offset;


    <div class="row d-flex justify-content-center mt-60 mb-60">
            <div class="col-md-12">
                <div class="main-card mb-3 card">
                    <div class="card-body">
                        <h5 class="card-title">Live Finance News</h5>
                        <div class="vertical-timeline vertical-timeline--animate vertical-timeline--one-column">

                            @foreach (var article in Model.news.Data)
                        {

                                <div class="vertical-timeline-item vertical-timeline-element">
                                    <div>
                                        <span class="vertical-timeline-element-icon bounce-in"> <i class="badge badge-dot badge-dot-xl badge-success"> </i> </span>
                                        <div class="vertical-timeline-element-content bounce-in">
                                            <h4 class="timeline-title"><a href="@article.Url">@article.Title</a></h4>
                                            <p>@article.Description</p> <span class="mr-20 vertical-timeline-element-date">
                                                @article.PublishedAt.ToShortDateString()
                                                <br>
                                                @article.PublishedAt.TimeOfDay
                                            </span>
                                        </div>
                                    </div>
                                </div>
                        }

                        </div>
                    </div>
                </div>
            </div>
    </div>


    <div class="row">
            
            <div class="col">
                <a asp-page-handler="LoadMoreNews" asp-route-offset="0" class="btn btn-secondary btn-lg w-100">LOAD LATEST NEWS</a>

            </div>

             <div class="col">
                 <a asp-page-handler="LoadMoreNews" asp-route-offset="@nextNewsStream" class="btn btn-secondary btn-lg w-100">LOAD MORE NEWS</a>
            </div>

    </div>

}